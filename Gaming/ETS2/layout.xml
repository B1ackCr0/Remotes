<?xml version="1.0" encoding="utf-8"?>
<layout onorientation="orientation" onvolumedown="indicate_left" onvolumeup="indicate_right">
	<touch ontouchabs="control" ontouchsize="control_size" onup="control_up" />
	<grid>
		<row>
			<button text="U" />
			<button text="J" ontap="jump" />
		</row>
		<row>
			<button text="L" ontap="attack" />
			<button text="R" />
		</row>
		<row>
			<button text="C" />
			<button text="S" />
		</row>
	</grid>
	<touch ontouchdelta="look" ondown="look_down" onup="look_up" ontap="look_tap" />
</layout>